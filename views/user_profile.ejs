<link rel="stylesheet" href="/css/user_profile.css">
<h1>
    User Profile
</h1>
<% if(user.id == profile_user.id) { %>
    <!-- If user matches show the form -->
    <form action="/users/update/<%= profile_user.id %>"method="POST">
        <input type="text"name="name"value="<%= profile_user.name %>"placeholder="Enter Name"required>
        <input type="text"name="email"value="<%= profile_user.email %>"placeholder="Enter Email"required>
        <input type="submit"value="Update">
    </form>
<% }else { %>
    <!-- else show only the profile info -->
    <h2><%= profile_user.name %></h2>
    <h2><%= profile_user.email %></h2>
<% } %>

